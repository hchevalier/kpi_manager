<% if @reports.size %>
  <table>
    <tr>
      <th>Name</th>
      <th>Recurrence</th>
      <th>Next send</th>
      <th>Actions</th>
    </tr>
    <% @reports.each do |report| %>
      <tr class="fields">
        <td><%= report.name %></td>
        <td><%= report.send_frequency %></td>
        <td><%= report.send_at %></td>
        <td><%= link_to 'Show', report_path(report) %><%= link_to 'Edit', edit_report_path(report) %></td>
      </tr>
    <% end %>
  </table>
<% end %>
<%= link_to 'New report', new_report_path %>
